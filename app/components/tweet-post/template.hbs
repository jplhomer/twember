<div class="block block--tweet" {{action "toggleExpanded"}}>
  <div class="block__header">
    {{#if user}}
      <div class="block__avatar">
        <img src="{{user.profile_image_url_https}}" alt="{{user.name}}'s Profile Photo">
      </div>
      <a href="#">{{user.name}}</a> @{{user.screen_name}} â€¢
      <a href="#"><span class="block__timestamp">{{moment-from-now created_at allow-empty=true}}</span></a>
    {{/if}}
  </div>
  <div class="block__text">
    <p>{{yield}}</p>
  </div>
  {{#if media}}
    {{tweet-media media=media}}
  {{/if}}
  {{#if isExpanded}}
    <p>Expanded</p>
  {{/if}}
</div>
