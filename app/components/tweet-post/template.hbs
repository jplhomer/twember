<div class="block block--tweet" {{action "toggleExpanded"}}>
  <div class="block__text">
    <p>{{yield}}</p>
  </div>
  <div class="block__meta">
    <p>{{tweet-timestamp time=created_at}}</p>
  </div>
  {{#if media}}
    {{tweet-media media=media}}
  {{/if}}
  {{#if isExpanded}}
    <p>Expanded</p>
  {{/if}}
</div>
